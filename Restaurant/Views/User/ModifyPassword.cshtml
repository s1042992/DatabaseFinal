@model Restaurant.Models.UserPassword
@{
    ViewBag.Title = "ModifyPassword";
}

<p class="control-label" style="font-size:36px;">修改密碼</p>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		<div class="form-group">
			<p class="control-label col-md-2" style="display:inline">密碼</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<p class="control-label col-md-2" style="display:inline">確認密碼</p>
			<div class="col-md-10">
				@Html.EditorFor(model => model.passwordConfirm, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.passwordConfirm, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="修改" class="btn btn-default" />
			</div>
		</div>
	</div>
}
